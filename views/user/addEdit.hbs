<h2>{{viewTitle}}</h2>

<style>
    .formclass{
        background-color: rgb(1, 58, 58);
        color: white;
        margin: 20px;
        border-radius: 7px;
        padding: 20px;
        font-size: 18px;
    }
    .button{
        border-radius: 2px;
        background-color: seashell;
        color: black;
    }
    .token{
        color: black;
        font-family: monospace;
        padding: 20px;
        border-radius: 5px;
    }
</style>
<div class="token">
    {{tokenDisplay}}
</div>
<form autocomplete="off" class="formclass" action="/user" method="POST">
<input type="hidden" name="_id" value="{{user._id}}">
   <div>
       <label>Name</label>
       <input type="text" name="name" placeholder="Name" value="{{user.name}}">
       <div style="color:red;">
           {{user.nameError}}
       </div><br>
       <label>Number</label>
       <input type="text" name="number" placeholder="Mobile Number" value="{{user.number}}">
       <div style="color:red;">
           {{user.numberError}}
       </div><br>
    </div >
    <div>
        <button class="button" type="submit">Submit</button>&emsp;
        <button class="button"><a style="color: black;" href="/user/login">Login</a></button>
    </div>
</form>